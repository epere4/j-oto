<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.5"?>
<plugin>

   <extension point="org.eclipse.ui.actionSets">
      <actionSet
            label="Joto Refactoring Action Set"
            visible="true"
            id="com.google.code.joto.eclipse.ui.refactoringActionSet">

         <menu id="com.google.code.joto.eclipse.ui.refactoringMenu"
               label="Joto Refactoring">
            <separator name="additions">
            </separator>
         </menu>
         
      </actionSet>
   </extension>

   <extension point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="com.google.code.joto.eclipse.ui.IResourceContribution"
            objectClass="org.eclipse.core.resources.IResource">

  		<menu id="org.eclipse.jdt.ui.refactoring.menu"
               	label="Joto Refactoring"
               	path="edit">
            <separator name="JotoRefactoringMenu">
            </separator>
        </menu>
  		<menu id="org.eclipse.jdt.ui.refactoring.menu"
               	label="Joto Source"
               	path="edit">
            <separator name="JotoSourceMenu">
            </separator>
        </menu>
         
        <action
               class="com.google.code.joto.eclipse.ui.actions.RecursiveCheckConstructorPropertiesAnnotationAction"
               id="RecursiveCheckConstructorPropertiesAnnotation"
               label="Recursive add/check ConstructorProperties annotation"
               menubarPath="org.eclipse.jdt.ui.refactoring.menu/JotoRefactoringMenu">
        </action>
		
		         
      </objectContribution>
   </extension>
 </plugin>
